{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "templateRootUri": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/mspnp/template-building-blocks/v1.0.0/",
      "metadata": {
        "description": "Root path for templates"
      }
    },
    "parameterRootUri": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/mspnp/reference-architectures/master/sap-hana/parameters/",
      "metadata": {
        "decription": "Root path for parameters"
      }
    }
  },
  "variables": {
    "templates": {
      "deployment": {
        "virtualNetwork": "[uri(parameters('templateRootUri'), 'templates/buildingBlocks/vnet-n-subnet/azuredeploy.json')]",
        "virtualNetworkGateway": "[uri(parameters('templateRootUri'), 'templates/buildingBlocks/vpn-gateway-vpn-connection/azuredeploy.json')]",
        "virtualMachine": "[concat(parameters('templateRootUri'), 'templates/buildingBlocks/multi-vm-n-nic-m-storage/azuredeploy.json')]",
        "loadBalancedVmSet": "[concat(parameters('templateRootUri'), 'templates/buildingBlocks/loadBalancer-backend-n-vm/azuredeploy.json')]"
      },
      "parameter": {
        "virtualNetwork": "[uri(parameters('parameterRootUri'), 'virtualNetwork.parameters.json')]",
        "virtualNetworkGateway": "[uri(parameters('parameterRootUri'), 'virtualNetworkGateway.parameters.json')]",
        "jumpbox": "[concat(parameters('parameterRootUri'), 'jumpbox.parameters.json')]",
        "sapWdp": "[concat(parameters('parameterRootUri'), 'sapWdp.parameters.json')]",
        "sapApps": "[concat(parameters('parameterRootUri'), 'sapApps.parameters.json')]",
        "sapCentralSvc": "[concat(parameters('parameterRootUri'), 'sapCentralSvc.parameters.json')]",
        "sapHana": "[concat(parameters('parameterRootUri'), 'sapHana.parameters.json')]",
        "sapMsgServer": "[concat(parameters('parameterRootUri'), 'sapMsgServer.parameters.json')]"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "ra-sap-vnet-deployment",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.virtualNetwork]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.virtualNetwork]"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "ra-sap-jumpbox-deployment",
      "dependsOn": [
        "ra-sap-vnet-deployment"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.virtualMachine]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.jumpbox]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "ra-sap-wdp-deployment",
      "dependsOn": [
        "ra-sap-vnet-deployment"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.loadBalancedVmSet]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.sapWdp]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "ra-sap-apps-deployment",
      "dependsOn": [
        "ra-sap-vnet-deployment"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.virtualMachine]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.sapApps]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "ra-sap-central-svc-deployment",
      "dependsOn": [
        "ra-sap-vnet-deployment"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.loadBalancedVmSet]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.sapCentralSvc]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "ra-sap-hana-deployment",
      "dependsOn": [
        "ra-sap-vnet-deployment"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.virtualMachine]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.sapHana]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
        {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "ra-sap-msg-server-deployment",
      "dependsOn": [
        "ra-sap-vnet-deployment"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.virtualMachine]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.sapMsgServer]",
          "contentVersion": "1.0.0.0"
        }
      }
    }
  ],
  "outputs": {}
}